<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">
    <application>
        <view-handler>
            com.icesoft.faces.facelets.D2DFaceletViewHandler
        </view-handler>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
    </application>
    <managed-bean>
        <managed-bean-name>ApplicationBean</managed-bean-name>
        <managed-bean-class>com.momentumsystems.eeoc.cts.web.ApplicationBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>systemInfo</property-name>
            <value>#{systemConfiguration}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>DncManagerBean</managed-bean-name>
        <managed-bean-class>com.momentumsystems.eeoc.cts.web.DncManagerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>dncBusinessObject</property-name>
            <value>#{dncBusinessObject}</value>
        </managed-property>
        <managed-property>
            <property-name>systemInfo</property-name>
            <value>#{systemConfiguration}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>DncItem</managed-bean-name>
        <managed-bean-class>com.momentumsystems.eeoc.cts.web.transferObj.DncItem</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/dnc/index.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>newsClip</from-outcome>
            <to-view-id>/dnc/newsClip.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>complete</from-outcome>
            <to-view-id>/dnc/complete.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>